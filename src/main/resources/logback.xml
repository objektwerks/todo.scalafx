<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>${HOME}/.todofx/log/app.log</file>
        <encoder>
            <pattern>%-5p: %d{ISO8601} [%t] %m%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="file"/>
    </root>
</configuration>